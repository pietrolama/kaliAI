FROM kalilinux/kali-rolling

# Pre-installazione tool offensivi (richiede internet durante il build)
RUN apt-get update && apt-get install -y \
    nmap \
    curl \
    netcat-traditional \
    python3-scapy \
    iproute2 \
    dnsutils \
    iputils-ping \
    hydra \
    sshpass \
    telnet \
    && rm -rf /var/lib/apt/lists/*

# Ensure nmap is in PATH
ENV PATH="/usr/bin:/usr/sbin:$PATH"

# Mantiene il container vivo
CMD ["tail", "-f", "/dev/null"]
